    Layout = "~/Areas/Supplier/Themes/M1/Views/Shared/_SupplierLayout.cshtml";
}
@model  List<YSWL.MALL.Model.Ms.Theme>
<link href="/Scripts/tab/tab.css" rel="stylesheet" type="text/css" charset="utf-8" />
<link href="/Content/themes/base/jquery.ui.all.css" rel="stylesheet" type="text/css" />
<script src="/Scripts/tab/tab.js" type="text/javascript"> </script>
<link href="/Scripts/colorbox/colorbox.css" rel="stylesheet" type="text/css" />
<script src="/Scripts/colorbox/jquery.colorbox-min.js" type="text/javascript"> </script>
<script src="/Scripts/jquery/maticsoft.jquery.min.js" type="text/javascript"> </script>
<link href="/Scripts/jqueryui/jquery-ui-1.8.19.custom.css" rel="stylesheet" type="text/css" />
<script src="/Scripts/jqueryui/jquery-ui-1.8.19.custom.min.js" type="text/javascript"> </script>
<script type="text/javascript">
    $(function () {
        $("[id$='txtPhotoName']").hide();
        //$(".group2").colorbox({ rel: 'group2', transition: "fade" });

        $(".themeList").each(function () {
            var themeId = $(this).find("[id$='hfPhotoId']").val();
            var iscurrend = $(this).find("[id$='hidIsCurrent']").val();
            if (themeId == 1) {
                $(this).find("[id$='lbtnDel']").hide();
                $(this).find("[id$='btnRest']").hide();
            }
            if (iscurrend == "True") {
                $(this).find("[id$='lbtnDel']").hide();
                $(this).find("[id$='btnRest']").hide();
            }
        });
    });
</script>
<style type="text/css">
    .search
    {
        background-color: #ffffff;
        float: left;
        height: 35px;
    }
    
    .borderkuang td
    {
        bgcolor: "#FFFFFF";
    }
    .currentTd {
        border: 3px solid #6CABE7;
    padding: 10px;
    text-align: left;
    }
</style>
<div class="newslistabout">
    <div class="newslist_title">
        <table width="100%" border="0" cellspacing="0" cellpadding="0" class="borderkuang">
            <tr>
                <td bgcolor="#FFFFFF" class="newstitle">
                    <span>网站模板管理</span>
                </td>
            </tr>
            <tr>
                <td bgcolor="#FFFFFF" class="newstitlebody">
                    <span>您可以设置网站当前模板操作</span>
                </td>
            </tr>
        </table>
    </div>
    <br />
    <table style="text-align: center; width: 100%;border: 1px solid #CCC;padding: 5px;background-color: white;" cellpadding="5" cellspacing="5" class="border" >
        <tbody>
            <tr>
                <td style="text-align: left">
                    <table id="themeList" cellspacing="0" border="0" style="border-collapse: collapse;">
                        <tbody>
                            <tr>
                                @{Html.RenderPartial("_ThemeList", Model);}
                            </tr>
                        </tbody>
                    </table>
                </td>
            </tr>
            <tr>
                <td>
                </td>
            </tr>
        </tbody>
    </table>
</div>
<script type="text/javascript">
    $(function () {
       // $("span[class='currenttheme']").hide();
        $(".setCurrentThe").click(function () {
            var themeName = $(this).attr("name");
            $.get($YSWL.BasePath + "Home/SetCurrentTheme?name=" + themeName, function (data) {
                if (data == "ok") {
                    ShowSuccessTip("启用成功！");
                    //$("#themeList td[name='" + themeName + "']").addClass("currentTd").siblings().removeClass("currentTd");
                    window.location = $YSWL.BasePath + "Home/ThemeSetting";
                } else {
                    ShowFailTip("启用失败！");
                }
            });
        });
    });

</script>
