@{
    Layout = "~/Areas/Supplier/Themes/M1/Views/Shared/_SupplierLayout.cshtml";
}
@model YSWL.MALL.Model.Members.PointsLimit
<link href="/Scripts/msgbox/css/msgbox.css" rel="stylesheet" type="text/css" />
<script src="/Scripts/msgbox/js/msgbox.js" type="text/javascript"></script>
<script src="/Areas/Supplier/Themes/M1/Content/Scripts/UpdateMemberLimit.helper.js"
    type="text/javascript"></script>
<div class="mar30">
    <div class="contenttitle2">
        <h3>
            修改积分限制:</h3>
        <small class="desc">您可以进行修改积分限制操作:</small>
    </div>
    <table style="width: 100%;" cellpadding="2" cellspacing="1" class="border">
        <tr>
            <td class="tdbg">
                <table cellspacing="0" cellpadding="3" width="100%" border="0">
                    <tr>
                        <td class="td_class">
                            限制名称 ：
                        </td>
                        <td height="25">
                            <input type="hidden" name="LimitID" value="@Model.LimitID" id="LimitID" />
                            <input type="text" name="tName" id="tName" value="@Model.Name"  maxlength="20" style="width: 250px"/>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            &nbsp;&nbsp;
                        </td>
                        <td>
                            &nbsp;&nbsp;
                        </td>
                    </tr>
                    <tr>
                        <td class="td_class">
                            周期频率：
                        </td>
                        <td height="25">
                            <input type="text" name="Cycle" id="Cycle" value="@Model.Cycle" maxlength="20" style="width: 100px" />&nbsp;&nbsp;
                            周期单位
                            <select id="CycleUnit" name="CycleUnit">
                                <option value="day">日</option>
                                <option value="month">月</option>
                                <option value="year">年</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            &nbsp;&nbsp;
                        </td>
                        <td>
                            &nbsp;&nbsp;
                        </td>
                    </tr>
                    <tr>
                        <td class="td_class">
                            次数限制：
                        </td>
                        <td height="25">
                            <input type="text" name="MaxTimes" value="@Model.MaxTimes" id="MaxTimes" style="width: 200px" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            &nbsp;&nbsp;
                        </td>
                        <td>
                            &nbsp;&nbsp;
                        </td>
                    </tr>
                    <tr>
                        <td class="td_class">
                        </td>
                        <td height="25">
                            <div class="form stdform">
                                <input type="button" name="name" id="btnSave" value="保存" class="adminsubmit_short" />
                                <input type="button" name="name" id="btnCancel" value="取消" class="adminsubmit_short" />
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <label id="lblMsg" style="color: Red">
                            </label>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
    <br />
</div>
<script type="text/javascript">
    $(function () {
        $("#CycleUnit option[value='@Model.CycleUnit.ToString()']").attr("selected", "selected")
    });
</script>
