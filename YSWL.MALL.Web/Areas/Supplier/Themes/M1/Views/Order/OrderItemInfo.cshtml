<script type="text/javascript">
    $(function () {
        //隔行换色
        var trs = $('table.GridViewTyle tr');
        for (var i = 0; i < trs.length; i++) {
            if (i % 2 != 0) {
                trs.eq(i).addClass('eventrcolor');
            }
        }
        //鼠标移动效果
        $("table.GridViewTyle tr").hover(
            function () {
                $(this).addClass("tylehover");
            },
            function () {
                $(this).removeClass("tylehover");
            }
        );


        $('#btnSave').click(function () {
            var oi = $('#hfOrderInfo').val();
            if (parseInt(oi) <= 0) {
                return false;
            }
            $.ajax({
                url: $YSWL.BasePath + "Order/Picking",
                type: 'post',
                dataType: 'text',
                async: false,
                timeout: 10000,
                data: { oi: oi },
                success: function (resultData) {
                    switch (resultData) {
                        case "NO":
                            ShowFailTip("确认失败！");
                            break;
                        case "OK":
                            ShowSuccessTip("确认成功！");
                            setTimeout(function () {
                                window.parent.location.reload();
                            }, 2000);
                            break;
                        case "ISNOTMODIFY":
                            ShowFailTip("当前订单的状态已改变,您已不能修改,请刷新列表页...");
                            setTimeout(function () {
                                window.parent.location.reload();
                                //javascript: parent.$.colorbox.close();
                                //$('#btnSearch', window.parent.document).click(); 
                            }, 2000);
                            break;
                        default:
                            ShowServerBusyTip("确认失败！");
                            break;
                    }
                },
                error: function (xmlHttpRequest, textStatus, errorThrown) {
                    ShowServerBusyTip("服务器没有返回数据，可能服务器忙，请稍候再试！");
                }
            });
        });
    });
</script>
