@using Webdiyer.WebControls.Mvc
@model List<YSWL.MALL.Model.Shop.Coupon.CouponRule>

@if (Model != null && Model.Count > 0)
{
    foreach (var item in Model)
    {

        <div class="coupon_excellent use">
            <div class="coupons_head">
                <span class="cart_checkbox" ruleId="@item.RuleId" point="@item.NeedPoint"></span>
                <span>需要积分：<i class="price">@(item.NeedPoint)</i></span>
            </div>
            <div class="mc">
                <div class="cou_con">
                    <div class="cou_l">
                        <span>优惠券</span>
                        <p>
                            <i>￥</i>@item.CouponPrice.ToString("f")
                        </p>
                    </div>
                    <div class="cou_r">
                        <p class="cou_txt1">全部商品</p>
                        <p class="cou_txt2">@(item.LimitPrice == 0 ? "无限制" : "满" + item.LimitPrice.ToString("C") + "元可用")</p>
                    </div>
                </div>
                <div class="cou_ft">
                    <p class="c_hr"></p>
                    <div class="line_wrap">
                        @*<div class="cou_header">
                            优惠详情<i class="icon_down si "></i>
                        </div>*@
                        <div class="cou_time">@item.StartDate.ToString("yyyy-MM-dd")--@item.EndDate.ToString("yyyy-MM-dd")</div>
                    </div>
                    @*<div class="cou_details showText">>@Html.Raw(String.Format(YSWL.MALL.BLL.Shop.Coupon.CouponInfo.GetLimitStr(item), ViewBag.BasePath))</div>*@
                </div>
            </div>
        </div>
    }
     
}
else
{
    <div class="empty pro_list_empty">
        <div class="img_wrap">

            <img src="/Areas/MShop/Themes/MC01/Content/images/nopro.png" alt="暂无优惠券">
        </div>
        <div class="txt">
            <p>暂时还没有可供兑换的优惠券哦</p>
        </div>
    </div>
}



