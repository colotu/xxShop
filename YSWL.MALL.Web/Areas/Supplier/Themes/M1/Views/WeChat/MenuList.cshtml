    <div class="newslist">
        <div class="newsicon">
            <ul>
                <li style="background: url(/images/icon8.gif) no-repeat; no-repeat 5px 3px" id="liAdd"
                    runat="server"><a href="@(ViewBag.BasePath)WeChat/AddMenu" title="添加新的菜单" class="iframe">
                        添加</a> <b>|</b> </li>
            </ul>
        </div>
        <div id="menuList">
            @{Html.RenderPartial("_MenuList", Model);}
        </div>
    </div>
