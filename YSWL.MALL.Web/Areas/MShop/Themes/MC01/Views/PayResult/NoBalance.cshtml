@{
    Layout = "~/Areas/MShop/Themes/MC01/Views/Shared/_BaseLayout.cshtml";
}
@section head{
    <link href="/Areas/MShop/Themes/MC01/Content/Css/main.css" rel="stylesheet" />
}
 <div class="main_wrapper">
    <!--START HEADER-->
    <header>
        <div class="top_navbar fixed_header">
            <a href="javascript:;" class="si icon_goback"  id="c_back"> 
            </a>
            <p class="header_title">支付失败</p>
        </div>
    </header>
    <!-- END HEADER -->
    <div class="top"></div>
    <div class="pay_result_wrapper">
        <div class="con">
            <div class="pic_wrap">
                <img src="/Areas/MShop/Themes/MC01/Content/images/fail.png">
                <div class="txt red f20">
                    您的账户余额不足，请充值。
                </div>
            </div>
            <div class="result_txt">
                <div class="info">
                    订单号：@(ViewBag.OrderCode)
                </div>
                <div class="info">
                    应付金额：@(ViewBag.Amount.ToString("F"))元
                </div>
                <div class="info">
                    账户余额：@(ViewBag.Balance.ToString("F"))元
                </div>
            </div>
        </div>
        <div class="btn_wrapper">
            <a href="@(ViewBag.BasePath)UserCenter/Orders" class="b_btn btn_success"><input type="button" class="b_btn btn_green" value="查看或更改您的订单"></a>
</div>
    </div>
    <!-- ################-->
    <!-- END TOP MENU -->
    <!-- ################-->
</div>
<input type="hidden" value="@ViewBag.OrderId" id="OrderId" />
<input type="hidden" value="@ViewBag.PayStatus" id="Status" />
<script type="text/javascript">
    $(function () {
        //返回按钮
        $('#c_back').click(function () {
            window.location.replace($YSWL.BasePath + "O/oi/@ViewBag.OrderId");
        });
    });
</script>