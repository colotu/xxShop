@using Webdiyer.WebControls.Mvc
@model PagedList<YSWL.WeChat.Model.Core.RequestMsg>   
@if (Model != null)
{     
    <table width="100%" border="0" cellspacing="0" cellpadding="5" class="show stdtable stdtablecb GridView">
        <tr class="head1">
            <td width="5%" height="23" align="center" bgcolor="#FFFFFF">
                <input type="checkbox" id="cbxAll" />
            </td>
            <td width="10%" bgcolor="#FFFFFF">
                <span style="color: #666666;">发送时间</span>
            </td>
            <td width="10%" bgcolor="#FFFFFF">
                <span style="color: #666666;">消息内容</span>
            </td>
            <td width="10%" bgcolor="#FFFFFF">
                <span style="color: #666666;">用户名</span>
            </td>
            <td width="10%" bgcolor="#FFFFFF">
                <span style="color: #666666;">消息类型</span>
            </td>
            <td width="10%" bgcolor="#FFFFFF">
                <span style="color: #666666;">事件类型</span>
            </td>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <input class="itemcheck" type="checkbox" name="WebMsg" id="@item.UserMsgId"/>
                </td>
                <td>
                    @item.CreateTime
                </td>
                <td>
                    @if (@item.Description.Length >= 20)
                    {
                        @(item.Description.Substring(0, 17) + "...");
                    }
                    else
                    {
                        @item.Description;
                    }
                </td>
                <td>
                    @item.UserName
                </td>
                <td>
                    @item.MsgType
                </td>
                <td>
                    @item.Event
                </td>
            </tr>
        }
    </table>
    <br />
    <table width="100%" border="0" cellspacing="0" cellpadding="5" class="news_123">
        <tr>
            <td width="32" style="padding-left: 12px;">
            </td>
            <td width="5%">
                &nbsp;
            </td>
            <td width="5%">
                &nbsp;
            </td>
            <td width="30%">
                @Ajax.Pager(Model, new PagerOptions
                {
                    ShowDisabledPagerItems = false,
                    AlwaysShowFirstLastPageNumber = true,
                    PageIndexParameterName = "pageIndex",
                    NumericPagerItemCount = 10,
                    CurrentPagerItemTemplate = "<li><span class=\"ins\">{0}</span></li>",
                    NumericPagerItemTemplate = "<span>{0}</span>",
                    NavigationPagerItemTemplate = "<label class=\"page_xia\">{0}</label>",
                    CssClass = "page",
                     
                }).AjaxOptions(a => a.SetUpdateTargetId("LoadRequestMsgList"))
            </td>
        </tr>
    </table>
}
<script type="text/javascript">
    $(function () {
        $(".GridView tr:odd").addClass("eventrcolor");
        $(".GridView tr:even").addClass("oddtrcolor");
        $("table.GridView tr").hover(
            function () {
                $(this).addClass("tylehover");
            },
            function () {
                $(this).removeClass("tylehover");
            }
        );

        //批量删除
        $('#btnDelete').click(function () {
            var Ids ;
            var obj = $(':checkbox[name="WebMsg"][checked=checked]')
            if (obj.length == 0) {
                ShowFailTip("请选择要删除的消息");
                return false;
            } else {
                if (!confirm('您确定要删除吗？')) {
                    return false;
                }
                obj.each(function () {
                    if (($(this).attr("checked")) == "checked") {
                        Ids += $(this).attr("id") + ",";
                    }
                });
                $.ajax({
                    url: ($YSWL.BasePath + "WeChat/MsgDelete?timestamp={0}").format(new Date().getTime()),
                    type: 'POST',
                    dataType: 'json',
                    timeout: 10000,
                    async: false,
                    data: { ids: Ids },
                    success: function (resultData) {
                        if (resultData["Result"] == "OK") {
                            ShowSuccessTip("批量删除成功!");
                            window.location.href = $YSWL.BasePath + 'WeChat/RequestMsg';
                        } else {
                            ShowFailTip("批量删除失败!");
                        }
                    }, error: function (xmlHttpRequest, textStatus, errorThrown) {
                        ShowFailTip(xmlHttpRequest.responseText);
                    }
                });
            }
        });
        //全选按钮
        $('#cbxAll').click(function () {
            var obj = $(':checkbox[name="WebMsg"]');
            if (($(this).attr("checked")) == "checked") {
                obj.attr("checked", true);
            } else {
                obj.attr("checked", false);
            }
        });
    });
</script>
