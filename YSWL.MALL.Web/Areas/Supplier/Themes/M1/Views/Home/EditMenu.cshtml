                                    <div class="form stdform">
                                        <input type="button" value="确定" id="btnSave" class="reset radius2 btn_style" />
                                        <input type="button" value="取消" id="btnCancle" class="reset radius2 " />
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
            <br />
        </div>
        <script type="text/javascript">
    $(function () {
          $("#ddValue").hide();
        var urlType=$("#hidCurrentCateValue").val();
        $("#ddNavType").change(function () {
            if ($(this).val() > 0) {
                //说明选择的是商品分类
                $("#txtNavURL").hide();
                $.ajax({
                    url: $YSWL.BasePath + "Home/LoadProductCategory",
                    type: "Post",
                    dataType: "Json",
                    success: function (data) {
                        var html = '<option value="0" selected="selected">请选择</option>';
                        for (var i = 0; i < data.length; i++) {
                            html += '<option value="' + data[i].split(':')[0] + '">' + data[i].split(':')[1] + '</option>';
                        }
                        $("#ddValue").append(html).show();
                    }
                });
                $("#ddValue").change(function () {
                    if ($(this).val() == 0) {
                        ShowFailTip("页面地址不能为空");
                        return false;
                    } else {
                        $("#txtNavURL").val($(this).val());
                    }
                });
                 urlType= 1;
            } else {
                $("#txtNavURL").show();
                $("#ddValue").hide();
                $("#ddValue option").remove();
                urlType = 0;
                //var url = $("#txtNavURL").val();
            }
        });
        $("#btnSave").click(function () {
            //确定按钮点击
            var menuName = $("#txtMenuName").val().trim();
            var navUrl = $("#txtNavURL").val().trim();
            var sequence = $("#txtSqueeze").val().trim();
            var openType = $("#ddlTarget").val().trim();
            var checked = $("#chkIsUsed").attr("checked");
            if (menuName == "") {
                ShowFailTip("请输入菜单名称");
                return false;
            }
            if (navUrl == "") {
                ShowFailTip("请输入菜单地址");
                return false;
            }
            if (sequence == "") {
                ShowFailTip("请输入显示顺序");
                return false;
            }
            if (is_number(sequence)) {
                ShowFailTip("显示顺序只能为数字");
                return false;
            }

            $.ajax({
                url: $YSWL.BasePath + "Home/SubmitMenu",
                type: "POST",
                data: {
                    menuName: menuName,
                    navUrl: navUrl,
                    sequence: sequence,
                    openType: openType,
                    checked: checked,
                    urlType:urlType,
                    menuid:"@Model.MenuId",
                     submitType:"Edit"
                },
                success: function (data) {
                    if (data == "ok") {
                        ShowSuccessTip("保存成功！");
                    } else {
                        ShowFailTip("保存失败！");
                    }
                    window.location = $YSWL.BasePath + "Home/SupplierMenu";
                }
            });
        });
  
        $("#ddNavType option[value='@Model.URLType']").attr("selected", "selected");
        $("#ddlTarget option[value='@Model.Target']").attr("selected", "selected");
        if ((@Model.URLType)== 1) {
            $("#txtNavURL").hide();
                            $.ajax({
                    url: $YSWL.BasePath + "Home/LoadProductCategory",
                    type: "Post",
                    dataType: "Json",
                    success: function (data) {
                        var html = '<option value="0" selected="selected">请选择</option>';
                        for (var i = 0; i < data.length; i++) {
                            html += '<option value="' + data[i].split(':')[0] + '">' + data[i].split(':')[1] + '</option>';
                        }
                        
                        $("#ddValue").append(html);
                        $("#ddValue option[value='@Model.NavURL']").attr("selected", "selected");
                        $("#ddValue").show();
                    }
                });
        }
        
        if ("@Model.IsUsed"=="True") {
            $("#chkIsUsed").attr("checked", "checked");
        }
             $("#btnCancle").click(function () {
            window.location = $YSWL.BasePath + "Home/SupplierMenu";
        });
    });
        </script>
