        <asp:button id="btnUpdateSeq" runat="server" text="全部保存" class="adminsubmit" onclick="btnUpdateSeq_Click" />
        <asp:button id="btnGenerate" runat="server" text="生成菜单" class="adminsubmit" onclick="btnGenerate_Click" />
    </div>
